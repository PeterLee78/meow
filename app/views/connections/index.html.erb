<div class="container narrow-container body-container">
    <h1 class="messages-header">Connections</h1>

    <div class="messages-header-img">
    <%= image_tag "mentee-grid.jpg" %>
  </div>

    <ul class="nav nav-tabs tab-vertical">
      <% if @mentor_connections.exists? && @mentee_connections.exists? %>
        <li class="active"><a href="#mentor-connections" data-toggle="tab"><h2>Your <span style="color: #fc407c">Me</span>ntors</h2></a></li>
        <li><a href="#mentee-connections" data-toggle="tab"><h2>Your <span style="color: #fc407c">Me</span>ntees</h2></a></li>
      <% elsif @mentor_connections.exists? && @mentee_connections.blank? %>
        <li class="active"><a href="#mentor-connections" data-toggle="tab"><h2>Your <span style="color: #fc407c">Me</span>ntors</h2></a></li>
      <% elsif @mentee_connections.exists? && @mentor_connections.blank? %>
        <li><a href="#mentee-connections" data-toggle="tab"><h2>Your <span style="color: #fc407c">Me</span>ntees</h2></a></li>
      <% end %>
    </ul>

  <% if @mentor_connections.exists? && @mentee_connections.exists? %>
    <div class="tab-content">
      <div id="mentor-connections" class="tab-pane active">
        <%= render "mentorconnection_card", connections: @mentor_connections %>
      </div>
      <div id="mentee-connections" class="tab-pane">
        <%= render "menteeconnection_card", connections: @mentee_connections %>
      </div>
    </div>
  <% elsif @mentor_connections.exists? && @mentee_connections.blank? %>
    <div id="mentor-connections" class="tab-pane active">
      <%= render "mentorconnection_card", connections: @mentor_connections %>
    </div>
  <% elsif @mentee_connections.exists? && @mentor_connections.blank? %>
    <div id="mentee-connections" class="tab-pane">
      <%= render "menteeconnection_card", connections: @mentee_connections %>
    </div>
  <% else %>
    <h1>Sorry you dont have any connections yet</h1>
  <% end %>
</div>







