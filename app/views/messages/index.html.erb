<h1>Messages</h1>

<p>Find me in app/views/messages/index.html.erb</p>
  <button id="toggle">Click</button>

<% if @mentor_connections.exists? && @mentee_connections.exists? %>
  <!-- show the button -->


<% elsif @mentor_connections.exists? && @mentee_connections.blank? %>
  <div id="mentee-inbox">
    <h1>Mentor messages</h1>
    <%= render "connection_messages", connections: @mentor_connections %>
  </div>

<% elsif @mentee_connections.exists? && @mentor_connections.blank? %>
  <div id="mentee-inbox">
    <h1>Mentee messages</h1>
    <%= render "connection_messages", connections: @mentee_connections %>
  </div>

<% else %>
  <h1>Sorry you dont have any messages yet</h1>
<% end %>









