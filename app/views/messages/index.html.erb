<div class="container narrow-container body-container">
  <h1 class="messages-header">Conversations</h1>

  <div class="messages-header-img">
    <%= image_tag "mentee-grid-3.jpg" %>
  </div>

  <ul class="nav nav-tabs tab-vertical">
    <% if @mentor_connections.exists? && @mentee_connections.exists? %>
      <li class="active"><a href="#mentor-inbox" data-toggle="tab"><h2>with <span style="color: #fc407c">Me</span>ntors</h2></a></li>
      <li><a href="#mentee-inbox" data-toggle="tab"><h2>with <span style="color: #fc407c">Me</span>ntees</h2></a></li>
    <% elsif @mentor_connections.exists? && @mentee_connections.blank? %>
      <li class="active"><a href="#mentor-inbox" data-toggle="tab"><h2>with <span style="color: #fc407c">Me</span>ntors</h2></a></li>
    <% elsif @mentee_connections.exists? && @mentor_connections.blank? %>
      <li><a href="#mentee-inbox" data-toggle="tab"><h2>with <span style="color: #fc407c">Me</span>ntees</h2></a></li>
    <% end %>
  </ul>

  <% if @mentor_connections.exists? && @mentee_connections.exists? %>
    <div class="tab-content">
      <div id="mentor-inbox" class="tab-pane active">
        <%= render "mentormessages", connections: @mentor_connections %>
      </div>
      <div id="mentee-inbox" class="tab-pane">
        <%= render "menteemessages", connections: @mentee_connections %>
      </div>
  <% elsif @mentor_connections.exists? && @mentee_connections.blank? %>
    <div id="mentor-inbox" class="tab-pane active">
      <%= render "mentormessages", connections: @mentor_connections %>
    </div>
  <% elsif @mentee_connections.exists? && @mentor_connections.blank? %>
    <div id="mentee-inbox" class="tab-pane">
      <%= render "menteemessages", connections: @mentee_connections %>
    </div>
  <% else %>
    <h1>Sorry you dont have any messages yet</h1>
  <% end %>
  </div>
</div>










