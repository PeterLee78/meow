doneBtn = document.querySelector(".card-<%=@milestone.id%> .markBtn");

<% if @milestone.is_completed %>
  doneBtn.innerText =  'Undo'
<% else %>
  doneBtn.innerText =  'Done'
<% end %>

square = document.querySelector(".card-<%=@milestone.id%> .check");
square.classList.toggle('fa-square');
square.classList.toggle('far');
square.classList.toggle('fa-check-square');
square.classList.toggle('fas');

progressBar = document.querySelector(".progress-<%=@goal.id%> .progress-bar");
// get the new percentage by @goal
newPerc = "<%= @goal.perc_completed %>%";
// update the style width of the 'progressBar'
progressBar.style.width = newPerc;

