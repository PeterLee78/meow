<div class="container">
  <h1>Find your mentor</h1>

  <div class="search-bar-container">
    <p class="filter-box">Filter</p>
    <div class="search-bar">
      <%= form_tag(mentors_path, method: 'get') do %>
      <% professional_interests = [" ", "All", "Sales", "Marketing", "Computer Programming", "Linux", "MacOS", "Windows", "Operations", "Devops", "Product Management", "Project Management", "Artificial Inteligence", "Data Science", "IoT"] %>
      <%= select_tag :professional_interests, options_for_select(professional_interests)%>
      <% personal_interests = [" ", "All", "Work-life balance", "Family", "Reading", "Volunteer work", "Sports & activities", "Cooking", "Arts & music"] %>
      <%= select_tag :personal_interests, options_for_select(personal_interests)%>
      <%= submit_tag 'Search'%>
      <% end %>
    </div>
  </div>

  <div class="container-margin">
      <div class="row">
        <% @profiles.each do |profile| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= link_to profile_path(profile.id), class: "card-link" do %>
              <div class="card-browse">
                <div class="card-browse-top">
                  <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-browse-user"/>
                  <div class="card-browse-infos">
                    <h2><%= profile.user.first_name %> <%= profile.user.last_name %></h2>
                    <p><%= profile.user.job_title %> at <% profile.user.company %></p>
                  </div>
                </div>
                <div class="card-browse-btm">
                  <p><%= profile.description %></p>
                </div>
                <div class="browse-connect-btn"></div>
              </div>
            <% end %>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</div>



