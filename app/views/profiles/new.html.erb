<div class="sign-up-container">
  <div class="sign-up-form">

    <h4 class="text-center"><strong>Sign up for Mentor Profile </strong></h4>

    <%= simple_form_for @profile do |f| %>
      <div class="skip-mentor">
        <div class="signup-skip-button">
          <%= link_to "I don't want to be a Mentor", new_mentee_path, class: "btn btn-primary" %>
        </div>

      </div>
      <%= f.input :description,
                  label: "Tell us why you love to be a Mentor",
                  as: :text %>

      <div class="both-interests">
        <div>
        <%= f.input :interests,
                    label: 'Professional interests',
                    style: "display:inline",
                    as: :check_boxes,
                    collection: Interest.where(category: 'professional'),
                    input_html: { multiple: true },
                    include_blank: false,
                    include_hidden: false %>
        </div>
        <div>
        <%= f.input :interests,
                    label: 'Personal interests',
                    item_wrapper_class: 'inline',
                    as: :check_boxes,
                    collection: Interest.where(category: 'personal'),
                    input_html: { multiple: true },
                    include_blank: false,
                    include_hidden: false %>
        </div>
      </div>

        <br><h5><strong>Work details</strong></h5>
        <%= simple_fields_for @user do |f| %>
          <%= f.input :company, label: 'Company', input_html: {style: 'width: 300px'} %>
          <%= f.input :job_title, label: 'Job Title', input_html: {style: 'width: 300px'} %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        <% end %>

    <%= f.input :is_mentor, :as => :hidden, :input_html => { :value => true } %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
