<h4>Sign up for Mentor Profile </h4>

<%= simple_form_for @profile do |f| %>
  <div class="skip-mentor">
    <div class="item">
      <%= link_to "I don't want to be a mentor", new_mentee_path, class: "btn btn-primary" %>
    </div>

  </div>
  <%= f.input :description,
              label: "Tell us why you love to be a Mentor",
              as: :text %>

  <%= f.input :interests,
              label: 'Professional interests',
              style: "display:inline",
              as: :check_boxes,
              collection: Interest.where(category: 'professional'),
              input_html: { multiple: true },
              include_blank: false,
              include_hidden: false %>

  <%= f.input :interests,
              label: 'Personal interests',
              item_wrapper_class: 'inline',
              as: :check_boxes,
              collection: Interest.where(category: 'personal'),
              input_html: { multiple: true },
              include_blank: false,
              include_hidden: false %>


    <br><h4><strong>Work details</strong></h4>
    <%= simple_fields_for @user do |f| %>
      <%= f.input :company, label: 'Company' %>
      <%= f.input :job_title, label: 'Job Title' %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    <% end %>

<%= f.input :is_mentor, :as => :hidden, :input_html => { :value => true } %>
<%= f.button :submit %>

<% end %>

